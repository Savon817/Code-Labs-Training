<h1>List of all post</h1>



<table>
    <tr>
        <th>Post Title</th>
        <th>Post Body</th>
        <th>Post Actions</th>
    </tr>

    <% @posts.each do |post|%>
        <tr>
            <td><h3><%= post.title %></h3></td>
            <td><p><%= post.body %></p></td>
            <td>
                <p>
                    <%= link_to "Show", post_path(post) %> | 
                    <%= link_to "Edit", edit_post_path(post) %> | 
                    <%= button_to "Delete", post_path(post), method: :delete %>
                </p>
            </td>
        </tr>
    <% end %>
</table>

<%= link_to "Click here to create a new post", new_post_path %>